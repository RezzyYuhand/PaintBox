<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PaintBox" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary_color_night</item>
        <item name="colorPrimaryDark">@color/background_color_night</item>
        <item name="android:colorBackground">@color/background_color_night</item>
    </style>

    <style name="PaintingCard">
        <item name="cardBackgroundColor">@color/secondary_color_night</item>
    </style>

    <style name="TitleTextCard">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_color_night</item>
    </style>

    <style name="DescTextCard">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>